@model TodoViewModel

@{
    ViewData["Title"] = "Manage your todo list";
}

<div class="panel panel-default todo-panel">
    <div class="panel-heading">@ViewData["Title"]</div>

    <table class="table table-hover">
        <thead>
            <tr>
                <td>&#x2714;</td>
                <td>Item</td>
                <td>Due</td>
            </tr>
        </thead>

        @foreach (var currTodoItem in Model.Items)
        {
            @await Html.PartialAsync("_TodoListItem", currTodoItem)
        }
    </table>

    <div class="panel-footer add-item-form">
        @await Html.PartialAsync("_AddItemPartial", new TodoItem())
    </div>
</div>